<article>
    <header id="content-header">
        <h1><%= @genre.name %></h1>
    </header>
    <% if current_user_admin? %>
    <nav>
    <%= link_to "Update", edit_genre_path(@genre), class: "button" %>
    <%= link_to "Delete", @genre, method: :delete, class: "button delete", data: {confirm: 'Are you sure?'} %>
    </nav>
    <% end %>
    <% if @movies.any? %>
    <h3><%= pluralize(@movies.size, "movie") %> in this genre:</h3>
    <ul>
        <% @movies.each do |movie| %>
        <li><%= link_to movie.title, movie %></li>
        <% end %>
    </ul>
    <% end %>
</article>