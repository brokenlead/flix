<%= form_for([@movie, @review]) do |f| %>
<fieldset>
<ol>
    <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, size:40, autofocus:true %>
    </li>
    <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment, rows:5, cols:80, placeholder:"What did you think?" %>
    </li>
    <li class="required stars">
        <%= f.label :stars %>
        <% Review::STARS.each do |star| %>
        <span class="star"><%= f.radio_button :stars, star %> <%= star %></span>
        <% end %>
    </li>
    <p>
        <%= f.submit "Post Review" %>
        <%= link_to "Cancel", @movie, class: "button" %>
    </p>
</ol>
</fieldset>
<% end %>