<header id="content-header">
    <h1>Sign In</h1>
</header>
<%= form_tag session_path do %>
    <fieldset>
        <ol>
            <li>
                <%= label_tag :email %>
                <%= email_field_tag :email, nil, required:true, size:40, autofocus:true %>
            </li>
            <li>
                <%= label_tag :password %>
                <%= password_field_tag :password, nil, required:true, size:40 %>
            </li>
            <li>
                <%= submit_tag "Sign In" %>
            </li>
            <li>
                <%= link_to "No Account Yet?", signup_path %>
            </li>
        </ol>
    </fieldset>
<% end %>