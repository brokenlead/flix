<article id="user">
    <header id="content-header">
        <%= profile_image_for(@user) %>
        <h1><%= @user.name %></h1>
        <h2><%= @user.username %></h2>
    </header>
    <h3>Email</h3>
    <p><%= mail_to @user.email %></p>
    <h3>Member since</h3>
    <p><%= format_member_since(@user) %></p>
    <footer>
        <nav>
            <%= link_to "Edit", edit_user_path(@user), class: "button" %>
            <%= link_to "Delete",
                @user,
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: "button" %>
        </nav>
    </footer>
</article>